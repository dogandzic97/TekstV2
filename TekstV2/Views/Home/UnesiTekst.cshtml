@model TekstV2.Models.Propis

@{
    ViewData["Title"] = "UnesiTekst";
}

<h1>UnesiTekst</h1>

<h4>Propis</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UnesiTekst">
                <textarea name="TekstPropisa" style="width:750px;height:500px">@Model.TekstPropisa</textarea>
                <script>
            tinymce.init({
                selector: 'textarea',
                plugins: 'a11ychecker advcode casechange formatpainter linkchecker autolink lists checklist media mediaembed pageembed permanentpen powerpaste table advtable tinycomments tinymcespellchecker',
                toolbar: 'a11ycheck addcomment showcomments casechange checklist code formatpainter pageembed permanentpen table',
                toolbar_mode: 'floating',
                tinycomments_mode: 'embedded',
                tinycomments_author: 'Author name'
            });
                </script>
                <br />
                <input type="submit" value="Потврди" class="btn btn-outline-info" />
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
